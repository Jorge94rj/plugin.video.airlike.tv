<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.video.airlike.tv"
version="2.4.0"
name="Airlike TV"
provider-name="J_J">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
    <import addon="service.cronxbmc" version="0.1.6"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension library="resources" point="xbmc.python.module" />
  <extension point="xbmc.service" library="setcron.py"/>
  <extension point="xbmc.python.script" library="resources/lib/contentmanager.py"/>
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Airlike TV</summary>
    <description lang="en_GB">Video plugin to play scheduled media</description>
    <assets>
      <icon>resources\media\icon.png</icon>
      <fanart>resources\media\fanart.jpg</fanart>
      <screenshot>resources\media\screenshot-01.jpg</screenshot>
      <screenshot>resources\media\screenshot-02.jpg</screenshot>
      <screenshot>resources\media\screenshot-03.jpg</screenshot>    
    </assets>
    <news>Updated with latest artwork metadata</news>
  </extension>
</addon>